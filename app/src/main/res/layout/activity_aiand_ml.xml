<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#B9C1B9"
    tools:context=".AiandMlActivity">


    <!-- Course Title -->
    <TextView
        android:id="@+id/courseDescriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="AI and Machine Learning\n"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#212121"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginBottom="10dp" />

    <!-- Course Details -->

    <!-- Recommended Books Section -->
    <TextView
        android:id="@+id/courseDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:lineSpacingExtra="6dp"
        android:text="This course provides an introduction to the exciting world of Artificial Intelligence (AI) and Machine Learning (ML).\nKey topics include:\n- Fundamentals of AI and ML.\n- Supervised and unsupervised learning techniques.\n- Neural networks and deep learning.\n- Tools like TensorFlow, PyTorch, and Scikit-learn.\n- Real-world applications in computer vision, natural language processing, and robotics.\nBy the end of this course, you will be equipped with the skills needed to build and deploy intelligent systems."
        android:textColor="#616161"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/bookTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/courseDescriptionText" />

    <TextView
        android:id="@+id/bookTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="\nRecommended Books"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#212121"
        app:layout_constraintTop_toBottomOf="@id/courseDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/bookList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="- Artificial Intelligence: A Modern Approach by Stuart Russell and Peter Norvig.\n- Hands-On Machine Learning with Scikit-Learn, Keras, and TensorFlow by Aurélien Géron.\n- Deep Learning by Ian Goodfellow, Yoshua Bengio, and Aaron Courville.\n- Pattern Recognition and Machine Learning by Christopher Bishop."
        android:textSize="16sp"
        android:textColor="#616161"
        android:lineSpacingExtra="6dp"
        app:layout_constraintTop_toBottomOf="@id/bookTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ytai"
        android:layout_marginBottom="24dp" />

    <!-- YouTube Playlist Link -->

    <!-- Back Button -->

    <TextView
        android:id="@+id/ytai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autoLink="web"
        android:gravity="center"
        android:linksClickable="true"
        android:text="Watch the AI/ML Course Playlist"
        android:textAlignment="center"
        android:textColor="#1E88E5"
        android:textColorLink="#1E88E5"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookList" />

    <Button
        android:id="@+id/btnai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button_1"
        android:text="Back to Home"
        android:textColor="#FFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ytai"
        app:layout_constraintVertical_bias="0.176" />

</androidx.constraintlayout.widget.ConstraintLayout>