<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9E7E9"
    android:padding="16dp"
    tools:context=".FlutterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <!-- Course Title -->
        <TextView
            android:id="@+id/courseDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flutter Development"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="#15556F"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Course Details -->
        <TextView
            android:id="@+id/courseDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn Flutter to build natively compiled applications for mobile, web, and desktop from a single codebase.
\nKey topics include:\n
- Dart programming language basics.\n
- Flutter widgets and UI design.\n
- State management using Provider and Bloc.\n
- Networking and Firebase integration.\n
- Creating responsive apps for different platforms.\nBy the end of the course, youâ€™ll be ready to build powerful and beautiful cross-platform apps."
            android:textSize="16sp"
            android:textColor="#616161"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="24dp" />

        <!-- Recommended Books Section -->
        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommended Books"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#15556F"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/bookList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n- Flutter for Beginners by Alessandro Biessek\n
- Dart Programming for Flutter by Nitin K. Yadav\n
- Practical Flutter by Frank Zammetti\n
- Flutter in Action by Eric Windmill\n"
            android:textSize="16sp"
            android:textColor="#616161"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="24dp" />

        <!-- YouTube Playlist Link -->
        <TextView
            android:id="@+id/youtubeLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watch the Flutter Development Playlist"
            android:textSize="16sp"
            android:textColor="#095F57"
            android:layout_marginBottom="24dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:textColorLink="#1E88E5" />

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Courses"
            android:textSize="16sp"
            android:background="@drawable/background_button_1"
            android:textColor="#FFF"
            android:layout_marginBottom="16dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>