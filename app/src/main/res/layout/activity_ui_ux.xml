<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E4DAE6"
    tools:context=".UiUxActivity">

  <TextView
      android:id="@+id/courseDescriptionText"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="UI/UX Design Fundamentals"
      android:textSize="24sp"
      android:textStyle="bold"
      android:textColor="#3F174D"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:gravity="center"
      android:layout_marginBottom="12dp" />

  <!-- Course Details -->
  <TextView
      android:id="@+id/courseDetails"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="In this course, we will cover the basics of UI/UX design, focusing on creating user-centered designs for websites and mobile apps.\nKey topics include:
\n- Principles of design (contrast, alignment, balance, etc.).\n
- User research and persona development.\n
- Wireframing and prototyping tools like Figma and Adobe XD.\n
- Best practices for UI/UX in mobile and web apps.\n
- Usability testing and feedback integration.\nBy the end of this course, you will be equipped to design intuitive and engaging user interfaces and experiences."
      android:textSize="16sp"
      android:textColor="#616161"
      android:lineSpacingExtra="6dp"
      app:layout_constraintTop_toBottomOf="@id/courseDescriptionText"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/bookTitle"
      android:layout_marginBottom="24dp" />

  <!-- Recommended Books Section -->
  <TextView
      android:id="@+id/bookTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:text="Recommended Books"
      android:textSize="20sp"
      android:textStyle="bold"
      android:textColor="#3F174D"
      app:layout_constraintTop_toBottomOf="@id/courseDetails"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginBottom="16dp" />

  <TextView
      android:id="@+id/bookList"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="- Don't Make Me Think by Steve Krug\n
- The Design of Everyday Things by Don Norman\n
- Sprint: How to Solve Big Problems and Test New Ideas in Just Five Days by Jake Knapp\n
- The UX Book: Agile UX Design for a Quality User Experience by Rex Hartson and Pardha S. Pyla"
      android:textSize="16sp"
      android:textColor="#616161"
      android:lineSpacingExtra="6dp"
      app:layout_constraintTop_toBottomOf="@id/bookTitle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/youtubeLink"
      android:layout_marginBottom="24dp" />

  <!-- YouTube Playlist Link -->
  <TextView
      android:id="@+id/youtubeLink"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Watch the UI/UX Design Playlist"
      android:layout_marginTop="16dp"
      android:textSize="16sp"
      android:textColor="#7F1B90"
      app:layout_constraintTop_toBottomOf="@id/bookList"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:autoLink="web"
      android:linksClickable="true"
      android:textStyle="bold"
      android:gravity="center"
      android:textAlignment="center"
      android:textColorLink="#1E88E5"
      android:layout_marginBottom="24dp" />

  <!-- Back Button -->
  <Button
      android:id="@+id/backButton"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="Back to Courses"
      android:textSize="16sp"
      android:background="@drawable/background_button_1"
      android:textColor="#FFF"
      app:layout_constraintTop_toBottomOf="@id/youtubeLink"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginBottom="16dp" />

  </androidx.constraintlayout.widget.ConstraintLayout>